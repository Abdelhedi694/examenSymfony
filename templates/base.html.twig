<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/5/slate/bootstrap.min.css">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('films') }}">Films</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        {% if app.user %}
                            <a class="nav-link active" href="{{ path('new_film') }}">Créer ton film
                            </a>
                        {% endif %}


                <form class="d-flex">

                    {% if app.user %}
                        <a href="{{ path('logout') }}" class="btn btn-danger">Déconnexion</a>
                        {% else %}
                            <a href="{{ path('register') }}" class="btn btn-primary">Inscription</a>
                            <a href="{{ path('login') }}" class="btn btn-primary">Connexion</a>
                    {% endif %}


                </form>
            </div>
        </div>
    </nav>


    {% block body %}{% endblock %}
    </body>
</html>
